<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resellio - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/all.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/style.css?v3">
</head>
<body>
    <header class="main_menu home_menu">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img class="logo-resize" src="~/img/logo.png" alt="Resellio Logo">
                        </a>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div class="collapse navbar-collapse main-menu-item" style="justify-content: right !important">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Auth" asp-action="SignIn">Log In</a>
                                    </li>
                                    <li class="nav-item" style="margin-right:-25px;margin-left:5px">
                                        <a class="nav-link" asp-controller="Auth" asp-action="SignUp">Sign Up</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="collapse navbar-collapse main-menu-item" style="justify-content: right !important">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Basket" asp-action="Index" style="padding-right:0px !important">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" style="padding-left:0px; margin-right:-25px;margin-left:5px !important" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-user"></i>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown_2">
                                            <a class="dropdown-item" asp-controller="User" asp-action="Index">Profile</a>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="CheckoutHistory">Purchase History</a>
                                            <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        }
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div class="container section_padding">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer_part">
        <div class="copyright_part">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="copyright_text">
                            <P style="margin-left: -25px;">
                                Copyright &copy; 2024 All rights reserved | Developed by <a href="https://www.bedirhanerkilic.com/">Bedirhan Erkılıç</a>
                            </P>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="footer_icon social_icon" style="margin-right: -25px;">
                            <ul class="list-unstyled">
                                <li><a href="https://tr-tr.facebook.com/people/Bedirhan-Erk%C4%B1l%C4%B1%C3%A7/pfbid02RTaGbrTy6D3YUfZeiiRAZ815k6jUyou1v3MfpyqQW8D7uHi9GsaBhdd17esVJRpwl/" class="single_social_icon"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="https://www.instagram.com/erkilicbedirhan" class="single_social_icon"><i class="fab fa-instagram"></i></a></li>
                                <li><a href="https://github.com/BedirhanErk" class="single_social_icon"><i class="fab fa-github"></i></a></li>
                                <li><a href="https://www.linkedin.com/in/bedirhan-erkilic/" class="single_social_icon"><i class="fab fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/jquery-1.12.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.magnific-popup.js"></script>
    <script src="~/js/swiper.min.js"></script>
    <script src="~/js/masonry.pkgd.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/contact.js"></script>
    <script src="~/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/js/jquery.form.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/mail-script.js"></script>
    <script src="~/js/custom.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
