@model List<ProductViewModel>
@{
    ViewData["Title"] = "Homepage";
}

<section class="cat_product_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row align-items-center latest_product_inner">
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <div class='col-lg-3 col-sm-6'>
                                <div class="single_product_item">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">
                                        <img src="@item.PictureUrl" alt="@item.Name">
                                    </a>
                                    <div class="single_product_text">
                                        <h4>@item.Name</h4>
                                        <h3>@item.Category.Name <span class="category-right">@item.Price ₺</span></h3>
                                        <a asp-controller="Basket" asp-action="AddBasketItem" asp-route-id="@item.Id" class="add_cart">+ Add To Cart</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .category-right {
        float: right;
    }
</style>