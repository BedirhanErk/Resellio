@model List<ProductViewModel>
@{
    ViewData["Title"] = "My Products";
}

<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            @if (Model.Any())
            {
                <div class="col-md-10">
                    <div class="breadcrumb_iner breadcrumb-height">
                        <div class="breadcrumb_iner_item">
                            <h2>My Products</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <a class="btn_3 float-end" title="Add" asp-controller="Product" asp-action="Create"><i class="fa fa-plus"></i></a>
                </div>
            }
            else
            {
                <div class="col-md-12">
                    <div class="breadcrumb_iner breadcrumb-height">
                        <div class="breadcrumb_iner_item">
                            <h2>My Products</h2>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@if (Model.Any())
{
    <table class="table table-borderless table-bg mt-4">
        <thead>
            <tr>
                <th style="padding-left:25px">Product</th>
                <th>Category</th>
                <th>Price</th>
                <th class="text-center">Menu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding-left:25px"><img class="img-thumbnail table-img" alt="@item.Name" src="@item.PictureUrl" />@item.Name</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Price ₺</td>
                    <td class="text-center">
                        <a class="btn_3" title="Update" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id"><i class="fa fa-pencil-alt"></i></a>
                        <a class="btn_3" title="Delete" style="margin-left:5px" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="cart-empty">
        <p class="mb-3">No products found.</p>
        <a class="btn_1" asp-controller="Product" asp-action="Create">Add Product</a>
    </div>
}

<style>
    .btn_3 {
        padding: 9px 15px;
    }

    .cart-empty {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        box-shadow: 0 0 2px #d1d7dc;
        padding: 80px;
        margin-top: 30px;
    }

    .table-bg th, .table-bg td {
        background-color: #f9f9ff;
    }

    .table-img {
        width: 72px;
        margin-right: 15px;
    }
</style>