@model UserViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Information</h5>
                <table class="table table-striped">
                    <tr>
                        <td>Name</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Surname</td>
                        <td>@Model.Surname</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="list-group">
            <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">My Products</a>
        </div>
    </div>
</div>

